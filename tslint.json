{
    "extends": ["tslint:recommended"],
    "rules": {
        "interface-over-type-literal": false,
        "object-literal-sort-keys": false,
        "member-access": true,
        "member-ordering": [true, {"order": "instance-sandwich"}],
        "no-inferrable-types": true,
        "no-unnecessary-type-assertion": true,
        "promise-function-async": true,
        "await-promise": true,
        "ban-comma-operator": true,
        "curly": true,
        "no-construct": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-dynamic-delete": true,
        "no-floating-promises": true,
        "no-for-in-array": true,
        "no-implicit-dependencies": [true, "dev"],
        "no-inferred-empty-object-type": true,
        "no-invalid-template-strings": true,
        "no-object-literal-type-assertion": true,
        "no-return-await": true,
        "no-sparse-arrays": true,
        "no-this-assignment": true,
        "no-unbound-method": true,
        "prefer-conditional-expression": true,
        "prefer-object-spread": true,
        "triple-equals": true,
        "deprecation": true,
        "no-duplicate-imports": true,
        "no-require-imports": true,
        "array-type": [true, "array-simple"],
        "arrow-return-shorthand": true,
        "binary-expression-operand-order": true,
        "comment-format": [true, "check-space"],
        "encoding": true,
        "no-redundant-jsdoc": true,
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-qualifier": true,
        "prefer-switch": true,
        "prefer-template": true,
        "prefer-while": true,
        "return-undefined": true,
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always",
                "method": "never",
                "constructor": "never"
            }
        ],
        "space-within-parens": true,
        "type-literal-delimiter": true,
        "variable-name": [true, "allow-pascal-case"],
        "align": [true, "arguments", "parameters", "statements", "members", "elements"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "indent": [true, "spaces", 4],
        "one-line": [true, "check-catch", "check-finally", "check-else", "check-whitespace"],
        "linebreak-style": [true, "LF"],
        "max-line-length": [true, 120],
        "max-classes-per-file": false,
        "no-consecutive-blank-lines": true,
        "quotemark": [true, "single", "jsx-double", "avoid-escape"],
        "semicolon": [true, "always", "strict-bound-class-methods"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-type",
            "check-type-operator",
            "check-preblock"
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": {
                    "arrays": "always",
                    "exports": "always",
                    "functions": "never",
                    "imports": "always",
                    "objects": "always",
                    "typeLiterals": "always"
                }
            }
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ]
    }
}
